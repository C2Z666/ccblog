<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.ccblog.mapper.common.CommonMapper">

    <insert id="saveReportRecode">
        INSERT INTO report_record
        (
        reporter_uid,
        target_type,
        target_id,
        reason_id
        <if test="reasonText != null and reasonText != ''">
            ,reason_text
        </if>
        )
        VALUES
        (
        #{reporterUid},
        #{targetType},
        #{targetId},
        #{reasonId}
        <if test="reasonText != null and reasonText != ''">
            ,#{reasonText}
        </if>
        )
    </insert>


</mapper>
